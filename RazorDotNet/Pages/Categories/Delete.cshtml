@page
@model RazorDotNet.Pages.Categories.DeleteModel


@*p3=padding 3, mt-4=margin-top 4, pb=padding-bottom*@
<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0">Category Name</label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row align-content-center justify-content-center">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-outline-secondary border form-control" style="width:150px; color:azure">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>



